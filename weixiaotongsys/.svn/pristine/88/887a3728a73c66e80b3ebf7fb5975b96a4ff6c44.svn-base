<admintpl file="header" />
<body class="J_scroll_fixed">
	<div class="wrap jj">
		<ul class="nav nav-tabs">
        <li><a href="{:U('AgentManage/index')}">代理商列表</a></li>
        <li><a href="{:U('AgentManage/add')}">添加代理商</a></li>
    </ul>
		<div class="common-form">
			<form method="post" class="form-horizontal J_ajaxForm" action="{:U('AgentManage/edit_post')}">
				<fieldset>
                        <input type="hidden" class="input" name="id" value="{$agent['id']}" readOnly="true">
                <div class="control-group">
                    <label class="control-label">代理区域</label>
                    <div class="controls">
                        <select name="">
                            <option value="">中国</option>
                            {$terms_tree}
                        </select>
                    </div>
                </div>        
                <div class="control-group">
                    <label class="control-label">代理商名称:</label>
                    <div class="controls">
                        <input type="text" class="input" name="name" value="{$agent['name']}">
                    </div>
                </div>
				</fieldset>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary btn_submit J_ajax_submit_btn">更新</button>
					<a class="btn" href="__URL__">返回</a>
				</div>
			</form>
		</div>
	</div>
	<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>