<admintpl file="header"/>
<body class="J_scroll_fixed">
<div class="wrap">
  <ul class="nav nav-tabs">
        <li><a href="{:U('User/userinfo')}">修改信息</a></li>
        <li class="active"><a href="{:U('User/password')}">修改密码</a></li>
      </ul>
  <div class="common-form">
    <form class="form-horizontal J_ajaxForm" method="post" action="{:U('User/password_post')}" name="myform">
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="input01">原始密码:</label>
            <div class="controls">
              <input type="password" class="input-xlarge pass_befor" id="input01" name="old_password">
              <span id="failspass" name="failspass" style=" margin-top: 10px;"></span>
              <div style=" clear: both;"></div>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="input01">新密码:</label>
            <div class="controls">
              <input type="password" class="input-xlarge pass_now" id="input01" name="password">
              <span id="failspass_new" name="failspass" style=" margin-top: 10px;"></span>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="input01">重复新密码:</label>
            <div class="controls">
              <input type="password" class="input-xlarge pass_repeat" id="input01" name="repassword">
              <span id="failspass_repeat" name="failspass" style=" margin-top: 10px;"></span>
            </div>
          </div>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary btn_submit  J_ajax_submit_btn" onclick="check(this.form)">更新</button>
          </div>
        </fieldset>
      </form>
  </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
<script type="text/javascript" src="__ROOT__/statics/js/content_addtop.js"></script>
<script type="text/javascript">
  $(".pass_befor").blur(function(){
      var pass = $(this).val();
      if(pass==""){
          $("#failspass").html("<font color=red>*不能为空</font>");
          return false;
      }
  });
  $(".pass_now").blur(function(){
      var pass = $(this).val();
      if(pass==""){
          $("#failspass_new").html("<font color=red>*不能为空</font>");
          return false;
      }
  });
  $(".pass_repeat").blur(function(){
      var pass = $(this).val();
      if(pass==""){
          $("#failspass_repeat").html("<font color=red>*不能为空</font>");
          return false;
      }
  });
</script>
<script type="text/javascript">
    function check(form) {
        if(form.old_password.value=='') {
            form.old_password.focus();
            return false;
        }
        if(form.password.value==''){
            form.password.focus();
            return false;
        }
        if(form.repassword.value==''){
            form.repassword.focus();
            return false;
        }
        document.myform.submit();
    }
</script>
</body>
</html>