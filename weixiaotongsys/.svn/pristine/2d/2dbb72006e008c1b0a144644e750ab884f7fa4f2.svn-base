<script>
    $("#sub").click(function() {
        var userid = $("#userid").val();
        var repass = $("#repass1").val();
        var repass2 = $("#repass2").val();
        var rule = new RegExp("^[a-z0-9A-Z]{5,17}$");
        if (repass == "" || repass2 == "") {
            alert("密码不能为空!");
            return false;
        }
        var result = repass.match(rule);
        if (!result) {
            if (repass != rule) {
                alert("密码规范是8-16位的小写字母数字中的任意拼凑");
                return false;
            }
        }
        if (repass != repass2) {
            repass = "";
            repass2 = "";
            alert("两次密码不一致,请您重新输入");
            return false;
        }
        var password = $("#repass1").val();
        $.ajax({
            type: "GET",
            dataType: "JSON",
            url: "__ROOT__/index.php?g=apps&m=index&a=forgetPass_Activate",
            data: {
                userid: userid,
                pass: password
            },
            success: function(res) {
                //                var data = "";
                //                console.log(res);
                alert("您的密码已经更换!请您牢记新密码!");
                location.href = "__ROOT__/index.php/weixin/Usercenter/Userinfo"
            },
            error: function(res) {
                alert("密码修改失败");
            }
        });
    });
</script>