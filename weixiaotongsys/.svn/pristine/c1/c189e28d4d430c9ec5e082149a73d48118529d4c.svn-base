<admintpl file="header" />
<body class="J_scroll_fixed">
	<div class="wrap jj">
		<ul class="nav nav-tabs">
			<li><a href="{:U('Agreement/index')}">所有协议</a></li>
			<li><a href="{:U('Agreement/add')}">添加协议</a></li>
		</ul>
		<div class="common-form">
			<form method="post" class="form-horizontal J_ajaxForm" action="{:U('Agreement/edit_post')}">
				<fieldset>
					<div class="control-group">
						<label class="control-label">协议名称:</label>
						<div class="controls">
							<input type="text" class="input" name="name" value="{$name}"><span class="must_red">*</span>
							<input type="hidden" class="input" name="id" value="{$id}">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">协议地址:</label>
						<div class="controls">
							<textarea name="url" rows="5" cols="57">{$url}</textarea>
						</div>
					</div>
				</fieldset>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary btn_submit J_ajax_submit_btn">更新</button>
					<a class="btn" href="__URL__">返回</a>
				</div>
			</form>
		</div>
	</div>
	<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>