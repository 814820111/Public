<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap J_check_wrap">
    <ul class="nav nav-tabs">
        <li><a href="{:U('index')}">学校列表</a></li>
        <li class="active"><a href='{:U("departmentmanage",array("schoolid"=>$schoolid,"schoolname"=>$schoolname))}'>科室管理</a></li>
        <li><a href='{:U("adddepartment",array("schoolid"=>$schoolid,"schoolname"=>$schoolname))}'>添加科室</a></li>
    </ul>
    <p>学校：  {$schoolname}</p>
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th width="50">分组ID</th>
            <th width="100">分组类型</th>
            <th>分组名称</th>
            <th>创建时间</th>
            <th width="120">管理操作</th>
        </tr>
        </thead>
        <tbody>
        <foreach name="departmentinfo" item="vo">
            <tr>
                <td>{$vo.id}</td>
                <td>
                   <if condition = "$vo.status eq 1">
                    学生组
                    <else/>
                    教师组
                   </if> 


                </td>
                <td>{$vo.name}</td>
                <td><php>echo date('Y-m-d',$vo['create_time']);</php></td>
                <td>
                    <a href='{:U("departmentchange",array("id"=>$vo["id"],"schoolid"=>$schoolid))}'>修改</a> |
                    <a class="J_ajax_del" href="{:U('department_delete',array('id'=>$vo['id']))}">删除</a>
                </td>
            </tr>
        </foreach>
        </tbody>
    </table>
    <div class="pagination">{$page}</div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>