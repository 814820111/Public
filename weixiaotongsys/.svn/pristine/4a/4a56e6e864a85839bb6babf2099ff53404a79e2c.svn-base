<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        账号绑定
    </title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <link rel="stylesheet" href="__TMPL__public/css/bootstrap.css">
    <link rel="stylesheet" href="__TMPL__public/css/addressList1.css">
    <link rel="stylesheet" href="__TMPL__public/css/top-box.css">
    <script src="__ROOT__/statics/wjs/jquery-3.0.0.min.js"></script>
    <style>
        * {
            font-size: 16px;
        }
        
        .peng:first-child {
            margin-top: 500px;
        }
        
        .peng {
            margin-top: 3%;
        }
        
        .peng .pengxiaoer {
            margin-top: 4.2%;
            margin-bottom: -2%;
        }
        
        .tcpeng {
            margin-top: 3%;
        }
        
        .tcpeng .pengxiaoer {
            margin-top: 4.2%;
            margin-bottom: -2%;
        }
    </style>
</head>

<body>
    <div class="top_box">
        <!--<a href="index.html">-->
            <img src="__TMPL__public/img/img67.png">
        <!--</a>-->
        用户选择
        <div class="clearfix">
        </div>
    </div>
    <div style="margin-top: 50px"></div>
    <foreach name="studentinfo" item="v">
    <foreach name="v" item="vo">
        <div class="peng" style="border-bottom: 1px solid rgb(230,230,230)" data="{$vo.schoolid}" name={$vo.studentid} id={$vo.userid}>
            <div class="left" id={$vo.studentid}>
                <img src="{$Think.const.SR}{$vo.photo}" style="margin-bottom: 10px;width: 55px;height: 55px;border-radius: 55px;">
            </div>
            <div class="right" style="margin-top: 10px">
                <div class="pengxiao" >
                    <lb style="margin-left:10px;float: left;font-weight: normal;" >
                        {$vo.name}的{$vo.appellation}&nbsp;&nbsp;
                    </lb>
                    <div style="background: #18913A ;width: 60px;height: 20px;float: left;text-align: center;font-weight:lighter;color: white ">
                        家长
                    </div>
                    <br />
                    <br/>
                    <span class="phone" style="margin-left:10px">
                        {$vo.school_name}
                    </span>
                </div>
                <div class="clearfix">
                </div>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </foreach>
    </foreach>

    <foreach name="teacherinfo" item="v">
    <foreach name="v" item="vo">
        <div class="tcpeng" style="border-bottom: 1px solid rgb(230,230,230)" data="{$vo.schoolid}" id={$vo.teacherid}>
            <div class="left">
                <!--<img src="__TMPL__public/img/img02.png" alt="" style="margin: auto auto 11px 11px">-->
                <img src="{$Think.const.SR}{$vo.photo}" alt="" style="margin: auto auto 11px 11px;width: 55px;height:55px;border-radius: 55px;">
            </div>
            <div class="right" style="margin-top: 10px">
                <div class="tcpengxiao">
                    <lb style="margin-left: 10px;float: left;font-weight: normal;">
                        {$vo.name} &nbsp;&nbsp;
                    </lb>
                    <div style="background:#BD9716 ;width: 60px;height: 20px;float: left;text-align: center;font-weight:lighter;color: white ">
                        教师
                    </div>
                    <br />
                    <br />
                    <span class="phone" style="margin-left:10px">
                            {$vo.school_name}
                        </span>
                </div>
                <div class="clearfix">
                </div>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </foreach>
    </foreach>
</body>

</html>
<script>
    $(".peng").click(function() {
        var id = $(this).attr('id');
        //alert(id);
        var stu_id = $(this).attr('name');

        var schoolid =  $(this).attr('data');
         //alert(stu_id);
         //return;
//            window.location = '__ROOT__/index.php/weixin?id=' + id + '&stu_id=' + stu_id;
            window.location = '__ROOT__/index.php/weixin/Index/index?id=' + id + '&stu_id=' + stu_id+ '&schoolid=' + schoolid;
    });
    $(".tcpeng").click(function(){
        var schoolid =  $(this).attr('data');
        var id = $(this).attr('id');
//        alert(id);
        //return;
        location.href = "__ROOT__/index.php/weixin/Tindex/index?id="+id+ '&schoolid=' + schoolid;
    });
</script>