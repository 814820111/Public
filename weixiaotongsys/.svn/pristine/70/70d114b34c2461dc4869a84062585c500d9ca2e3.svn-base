<admintpl file="header"/>
<body class="J_scroll_fixed">
<div class="wrap jj">
    <ul class="nav nav-tabs">
        <li class="active"><a href="{:U('add_evaluation_setting')}">添加考评设置</a></li>
    </ul>
    <div class="common-form">
        <form method="post" class="form-horizontal add-validate" action="{:U('add')}">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">名称:</label>
                    <div class="controls">
                        <input type="text" class="input" id="name" name="name" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">排序:</label>
                    <div class="controls">
                        <input type="text" class="input" id="" name="sort" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">是否锁定:</label>
                    <div class="controls">
                        <input style="vertical-align: -1px" type="radio" class="input" name="lock" value="1" checked><span>是</span>
                        &nbsp;&nbsp;
                        <input style="vertical-align: -1px" type="radio" class="input" name="lock" value="0"><span>否</span>
                    </div>
                </div>
            </fieldset>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn_submit">确定</button>
                <button class="btn" type="reset">清空</button>
                <a class="btn" href="__URL__">返回</a>
            </div>
        </form>
    </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
