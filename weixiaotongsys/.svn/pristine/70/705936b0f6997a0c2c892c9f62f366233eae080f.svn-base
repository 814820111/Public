<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap J_check_wrap">
    <ul class="nav nav-tabs">
        <li class="active"><a href="{:U('index')}">班级相册列表</a></li>
        <li><a href="{:U('ClassPhoto/add')}">新增班级相册</a></li>
        <!-- <li><a href="{:U('schoolcheck')}">学校审核</a></li> -->
    </ul>
    <form class="well form-search" method="post" action="{:U('ClassPhoto/index')}">
            <div class="search_type cc mb10">
                <div class="mb10">
                    <span class="mr20">学校： 
                        <select class="select_2" name="school">
                            <option value='0'>全部</option>{$taxonomys}
                        </select> &nbsp;&nbsp;
                        关键字： 
                        <input type="text" name="keyword" style="width: 200px;" value="{$formget.keyword}" placeholder="请输入关键字...">
                        <input type="submit" class="btn btn-primary" value="搜索" />
                    </span>
                </div>
            </div>
        </form>
        <from class="J_ajaxForm" action="" method="post">
            <table class="table table-hover table-bordered table-list">
                <thead>
                    <tr>
                        <th width="15"><label><input type="checkbox" class="J_check_all" data-direction="x" data-checklist="J_check_x"></label></th>
                        <th>发布者</th>
                        <th>学校</th>
                        <th>班级</th>
                        <th>内容</th>
                        <th>缩略图</th>
                        <th>发布时间</th>
                        <th>状态</th>
                        <th width="100">操作</th>
                    </tr>
                </thead>
                <php>
                $status=array("1"=>"正常","0"=>"删除");
                $top_status=array("1"=>"已置顶","0"=>"未置顶");
                $recommend_status=array("1"=>"已推荐","0"=>"未推荐");
                </php>
                <foreach name="posts" item="vo">
                <tr>
                    <td><input type="checkbox" class="J_check" data-yid="J_check_y" data-xid="J_check_x" name="ids[]" value="{$vo.tid}" title="ID:{$vo.tid}"></td>
                    
                    <td>
                        <ul>{$vo.username}</ul>
                    </td>
                    <td>
                        <ul>{$vo.schoolname}</ul>
                    </td>
                    <td>
                        <ul>{$vo.class_name}</ul>
                    </td>
                    <td>{$vo.content}</td>
                    <!-- <td>{$excerpt_excerpt = empty($vo['post_excerpt'])?" ":'已填写'}</td> -->
                    <td>
                         <img width="50" height="25" src="{$vo.smeta}" /></td> 
                    </td>
                    <td>{$vo.write_time|date="Y-m-d H:i:s",###}</td>
                    <td>{$status[$vo['status']]}
                    </td>
                    <td>
                        <a href="{:U('ClassPhoto/edit',array('id'=>$vo['mid']))}" >修改</a> | 
                        <a href="{:U('ClassPhoto/delete',array('id'=>$vo['mid']))}" class="J_ajax_del">删除</a></td>
                </tr>
                </foreach>
            </table>
            <div class="pagination">{$Page}</div>

        </form>
    </div>
    <script src="__ROOT__/statics/js/common.js"></script>
    <script>
        function refersh_window() {
            var refersh_time = getCookie('refersh_time');
            if (refersh_time == 1) {
                window.location = "{:U('ClassPhoto/index',$formget)}";
            }
        }
        setInterval(function() {
            refersh_window();
        }, 2000);
        $(function() {
            setCookie("refersh_time", 0);
            Wind.use('ajaxForm', 'artDialog', 'iframeTools', function() {
                //批量移动
                $('.J_articles_move').click(
                        function(e) {
                            var str = 0;
                            var id = tag = '';
                            $("input[name='ids[]']").each(function() {
                                if ($(this).attr('checked')) {
                                    str = 1;
                                    id += tag + $(this).val();
                                    tag = ',';
                                }
                            });
                            if (str == 0) {
                                art.dialog.through({
                                    id : 'error',
                                    icon : 'error',
                                    content : '您没有勾选信息，无法进行操作！',
                                    cancelVal : '关闭',
                                    cancel : true
                                });
                                return false;
                            }
                            var $this = $(this);
                            art.dialog.open(
                                    "__ROOT__/index.php?g=portal&m=AdminPost&a=move&ids="
                                            + id, {
                                        title : "批量移动",
                                        width : "80%"
                                    });
                        });
            });
        });
    </script>
</body>
</html>