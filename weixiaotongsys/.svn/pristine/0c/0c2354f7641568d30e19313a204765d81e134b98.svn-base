<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap jj">
    <ul class="nav nav-tabs">
        <li><a href='{:U("parentlist",array("id"=>$studentid))}'>家长列表</a></li>
        <li><a href="{:U('addparent',array('studentid'=>$studentid,'schoolid'=>$schoolid))}">添加家长</a></li>
        <li class="active"><a href="#">更新家长</a></li>
    </ul>
    <div class="common-form">
        <form method="post" class="form-horizontal J_ajaxForm" action="{:U('updateparent_post')}">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">家长姓名:</label>
                    <div class="controls">
                        <input type="hidden"  name="parentid" value="{$relationdata['parentid']}">
                        <input type="hidden"  name="relationid" value="{$relationdata['id']}">
                        <input type="input" class="input" name="parentname" value="{$relationdata['parentname']}">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">联系方式:</label>
                    <div class="controls">
                        <input type="input" class="input" name="parentphone" value="{$relationdata['parentphone']}">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">与学生的关系:</label>
                    <div class="controls">
                        <select id="appe" class="input" name="appe" class="normal_select">
                            <!-- <OPTION value="0">请选择</OPTION>  -->
                            <foreach name="relation" item="vo">

                                <if condition="$vo['appellation_name'] eq $relationdata['appellation']">
                                    <OPTION value="{$vo.id}" selected="selected">{$vo.appellation_name}</OPTION>
                                    <else/>
                                    <OPTION value="{$vo.id}" >{$vo.appellation_name}</OPTION>
                                </if>
                            </foreach>
                        </select>
                    </div>
                </div>
            </fieldset>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn_submit  J_ajax_submit_btn">更新</button>
                <a class="btn" href="{:U("parentlist",array("id"=>$studentid))}">返回</a>
            </div>

        </form>
    </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>