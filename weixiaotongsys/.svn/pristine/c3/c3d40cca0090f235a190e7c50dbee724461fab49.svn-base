.chat-wrapper{
    max-width: 720px;
    min-height: 100%;
    margin: 0 auto;
    padding: 40px 0 51px;
}
/* header */
.header-bar{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 40px;
    background: #06c18e;
}
.header-bar .back{
    position: absolute;
    top: 10px;
    left: 4px;
    width: 20px;
    height: 20px;
}
.header-bar p{
    margin: 0;
    text-align: center;
    line-height: 40px;
    color: #fff;
    font-size: 18px;
}
.header-bar .plus{
    position: absolute;
    right: 10px;
    top: 8px;
    width: 25px;
    height: 25px;
}
.header-bar .select-option{
    display: none;
    position: absolute;
    width: 120px;
    top: 40px;
    right: 0;
    border: 1px solid #ddd;
    background: #fff;
    z-index: 1000;
}
.header-bar .select-option a{
    display: block;
    padding: 10px;
    font-size: 14px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}
.header-bar .select-option a:last-child{
    border-bottom: none;
}
/* 消息列表 */
.message-list .list-item{
    height: 70px;
    padding: 7px 70px;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
    position: relative;
}
.message-list .list-item a{
    display: block;
    width: 100%;
    height: 100%;
}
.message-list .list-item .avator-box{
    position: absolute;
    top: 10px;
    left: 10px;
    width: 50px;
    height: 50px;
}
.message-list .list-item .avator-box .unread{
    position: absolute;
    top: -7px;
    right: -7px;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    background: red;
    color: #fff;
    border-radius: 50%;
}
.message-list .list-item .nickname{
    padding-top: 5px;
    font-size: 18px;
    font-weight: 500;
    color: #000;
}
.message-list .list-item .time{
    position: absolute;
    right: 10px;
    top: 10px;
    color: #999;
}
/* 对话页面 */
.message-box{
    padding: 50px 10px 0;
}
.message-box .send-message,
.message-box .get-message{
    margin-bottom: 10px;
}
.message-box .time{
    margin-bottom: 5px;
    color: #999;
    text-align: center;
}
.message-box .msg{
    box-sizing: border-box;
}
.message-box .msg img{
    float: left;
    width: 40px;
    height: 40px;
    margin-right: 10px;
}
.message-box .msg span{
    float: left;
    background: #ddd;
    max-width: 60%;
    padding: 10px;
    border-radius: 5px;
    font-size: 14px;
    color: #000;
    position: relative;
}
.message-box .msg span::after{
    content: '';
    display: block;
    position: absolute;
    left: -7px;
    top: 12px;
    z-index: 100;
    height: 0px;
    width: 0px;
    border-top: 7px solid transparent;
    border-right: 7px solid #ddd;
    border-bottom: 7px solid transparent;
}
.message-box .send-message .msg img{
    float: right;
    margin-left: 10px;
    margin-right: 0;
}
.message-box .send-message .msg span{
    float: right;
    background: #06c18e;
}
.message-box .send-message .msg span::after{
    left: auto;
    right: -14px;
    border-top: 7px solid transparent;
    border-left: 7px solid #06c18e;
    border-right: 7px solid transparent;
    border-bottom: 7px solid transparent;
}
/* 群聊信息页面 */
.create-page{
    
}
.create-page *{
    box-sizing: border-box;
}
.create-page .person-list{
    margin-bottom: 10px;
}
.create-page .list-item{
    float: left;
    width: 20%;
    margin: 4% 0 0 4%;
    text-align: center;
}
.create-page .list-item p{
    margin-top: 5px;
}
.create-page .list{
    padding: 10px 10px;
    border-bottom: 1px solid #ddd;
    font-size: 15px;
}
.create-page input[type="submit"]{
    display: block;
    width: 95%;
    height: 40px;
    margin: 10px auto;
    font-size: 15px;
    text-align: center;
    background: #e4393c;
    color: #fff;
}
.create-page .person-list-title{
    padding: 5px 10px;
    background: #ddd;
    font-size: 16px;
}
/* 添加群成员页面 */
.all-person-list .form-group{
    padding: 5px 10px;
    border-bottom: 1px solid #ddd;
}
.all-person-list .form-group:first-child{
    border-top: 1px solid #ddd;
}
.all-person-list .form-group .am-checkbox{
    padding-left: 0;
}
.all-person-list .form-group .am-ucheck-icons{
    left: auto;
    right: 0;
}
.all-person-list .am-selected{
    width: 100%;
    padding-top: 10px;
    margin-bottom: 10px;
}
.all-person-list .am-selected-btn{
    height: 50px;
}
/* 底部导航 */
.footer-bar, .input-bar{
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 50px;
    border-top: 1px solid #ddd;
    background: #fff;
    z-index: 1000;
}
.footer-bar .footer-bar-container{
    display: flex;
    display: -webkit-flex;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.footer-bar .footer-bar-container .item{
    flex-grow: 1;
    text-align: center;
}
.footer-bar .footer-bar-container .item a{
    display: block;
    width: 100%;
    height: 100%;
}
.footer-bar .footer-bar-container .item.cur a{
    color: #06c18e;
}
.footer-bar .footer-bar-container .item .iconfont{
    font-size: 20px;
}
/* 底部发送区 */
.input-bar{
    height: 40px;
}
.input-bar>div{
    position: relative;
    width: 100%;
    height: 100%;
    padding-right: 80px;
    padding-left: 10px;
    box-sizing: border-box;
}
.input-bar .type-message{
    width: 100%;
    height: 28px;
    margin-top: 5px;
    padding: 0 10px;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
}
.input-bar .send-btn{
    position: absolute;
    right: 10px;
    top: 5px;
    width: 60px;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    text-align: center;
    background: #06c18e;
    color: #fff;
    border-radius: 5px;
    z-index: 10;
}

