		<div style=" border: 1px #bbbbbb dashed; margin-top: 10px; margin-bottom: 10px;"></div>
		<form>
			<div class="box">
				<div class="title">姓名：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">性别：</div>
				男<input type="radio" name="btn">女<input type="radio" name="btn">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">出生日期：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">现住址：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">班级：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">手机号：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">QQ：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">微信：</div>
				<input type="text" class="content">
				<div class="clearfix"></div>
			</div>
			<div class="box">
				<div class="title">备注：</div>
				<textarea style=" resize: none; width: 60%; height: 50px; "></textarea>
				<div class="clearfix"></div>
			</div>
			<div style=" position: relative;" class="box">
				<div class="title">资料照片：</div>
					<input type="file" id="photo" style=" display: none;" accept="image/*">
				
				<div id="click" style="width: 100px; height: 100px; border: 1px solid #bbbbbb; top: 30px; position: absolute; display: none"></div>
				<div style=" width: 100px; height: 100px; border: 2px dashed #bbbbbb; position:absolute;top: 30px; " class="up">
					<div style=" border: 1px dashed #bbbbbb;top: 50%; position: absolute; width: 98px; margin-top: -1px;"></div>
					<div style="height: 98px;  border: 1px dashed #bbbbbb; position: absolute; left: 50%; margin-left: -1px;"></div>
				</div>
			</div>
			<div style=" margin-top: 180px; margin-bottom: 20px;">
				<input type="submit" style=" background-color: #9ccc65; border-color: #9ccc65; border: none; color: white; width: 80%; margin-left: 10%;font-size: 18px; border-radius: 5px; padding-top: 10px; padding-bottom: 10px;" value="立即报名">
			</div>
		</form>
	<script>
		document.getElementById('photo').addEventListener('change',function(e){
		$(".up").hide()
		$("#click").show()
		var files = this.files;
		var img = new Image();
		var reader = new FileReader();
		reader.readAsDataURL(files[0]);
		reader.onload = function(e){
			var mb = (e.total/1024)/1024;
			if(mb>= 2){
				alert('文件大小大于2M');
				return;
			}
			img.src = this.result;
			img.style.width = "100%";
			document.getElementById('click').style.width="100px";
			document.getElementById('click').style.height="100px";
			document.getElementById('click').innerHTML = '';
			document.getElementById('click').appendChild(img);
		}
	});
	</script>
		<script>
		$(".up").click(
			function(){
				$("#photo").click()
				
			}
		)
		</script>
	</div>
</body>
</html>
