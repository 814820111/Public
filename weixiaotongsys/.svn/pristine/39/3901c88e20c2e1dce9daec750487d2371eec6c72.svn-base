<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap jj">
    <ul class="nav nav-tabs">
        <li><a href="{:U('remarks_list')}">栏目内容</a></li>
        <li class="active"><a href="{:U('remarks_add')}">添加栏目</a></li>
    </ul>
    <div class="common-form">
        <form method="post" class="form-horizontal J_ajaxForm" action="{:U('remarks_add_post')}">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">上级:</label>
                    <div class="controls">
                        <select name="parentid" class="normal_select">
                            <option value="0">作为一级菜单</option>
                            {$select_categorys}
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">名称:</label>
                    <div class="controls">
                        <input type="text" class="input" name="name" value="">
                        <span class="must_red">*</span>
                    </div>
                </div>


            </fieldset>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn_submit  J_ajax_submit_btn">添加</button>
                <a class="btn" href="__URL__">返回</a>
            </div>
        </form>
    </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>