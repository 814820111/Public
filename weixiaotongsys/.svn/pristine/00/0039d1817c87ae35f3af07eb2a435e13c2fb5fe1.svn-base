    <script>
        y = $(".container").width()
        $(".huitiao2").width(y)
        $(".footer").width(y)
        b = $(".tubiao li").width()
        $(".tubiao li img").width(b * 1.5)
        $(".tubiao li img").height(b * 1.5)
        $(".tubiao2 li img").width(b * 1.5)
        $(".tubiao2 li img").height(b * 1.5)
        c = $(".dian").width()
        $(".dian").height(c)
        d = $(".tixing img").width()
        $(".tixing img").height(d)
        e = $(".top .you").width()
        $(".top .you").height(e)
        f = $(".biaoti li img").width()
        $(".biaoti li img").height(f)
        g = $(".container").width()
        $(".lun").width(g * 2)
        k = $(".one ul li img").width()
        $(".one ul li img").height(k)

        $("document").ready(function() {
            var userid = $("#userid").val();
            $.ajax({
                type: "post",
                url: '__ROOT__/index.php/?g=apps&m=index&a=ParentContacts',
                async: true,
                data: {
                    userid: userid
                },
                dataType: 'json',
                success: function(res) {
                    var html = "";
                    res = eval(res.data);
                    for (var i = 0; i < res.length; i++) {
                        var classname = res[i].classname; //班级的名称

                        html += '<div class="peng">'
                        html += '<div style="width: 100%;height: 50px;">'
                        html += '<div style="position: relative;top: 15px;font-size: 16px;">' + classname + '</div>'
                        html += '<img class="jiandian"  style="margin-left: 90%;width: 30px;height: 30px;position: relative;bottom: 11px;" class="jiantou" src="__TMPL__Public/images/jiantou.png" alt="">'
                        html += '</div>'

                        for (var g = 0; g < res[i].student_list.length; g++) {
                            var name = res[i].student_list[g].name;

                            html += '<div class="right">'
                            html += '<div class="pengxiaoer">'
                            html += '<span>' + name + '</span>'
                            html += '<img class="jiantou" src="__TMPL__Public/images/jiantou.png" alt="">'
                            html += '<div class="clearfix"></div>'
                            html += '</div> '
                            for (var s = 0; s < res[i].student_list[g].parent_list.length; s++) {
                                var names = res[i].student_list[g].parent_list[s].name;
                                var phone = res[i].student_list[g].parent_list[s].phone;

                                html += '<div class="pengxiaoer mama" style="color: gray;">'
                                html += '<hr>'
                                html += '<span>' + names + ''
                                html += '<span class="phone">' + phone + '</span>'
                                html += '</span>'
                                html += '<img src="__TMPL__Public/images/dianhua.png" alt="">'
                                html += '<div class="clearfix"></div>'
                                html += '</div> '

                            }
                            html += '</div>'

                        }
                        html += '<div class="clearfix"></div>'
                        html += '</div>'

                    }
                    $(".jiang").append(html);
                    $(".right").hide();

                    $(".jiandian").click(function() {
                        $(".right").fadeIn(1500);

                    })
                },
                error: function() {
                    console.log('系统错误,请稍后重试');
                }
            });
        })
        $(".fanhui").click(function() {
            location.href = "__ROOT__/index.php/weixin/Tindex";
        })
    </script>

