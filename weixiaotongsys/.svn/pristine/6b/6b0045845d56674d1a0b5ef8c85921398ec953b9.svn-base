    <script>
        //学习能力的点击事件
        $(".jiang").click(function() {
                $(".ping").attr("src", "__TMPL__Public/images/71.png");
                $(".ping", this).attr("src", "__TMPL__Public/images/70.png");
                var zhi = $(".cheng", this).val();
                var shsd = $(".learn").val(zhi);

            })
            //动手能力的点击事件
