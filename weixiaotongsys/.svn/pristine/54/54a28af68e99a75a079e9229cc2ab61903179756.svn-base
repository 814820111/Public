<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap jj">
    <ul class="nav nav-tabs">
        <li><a href='{:U("parentlist",array("id"=>$studentid))}'>家长列表</a></li>
        <li class="active"><a href="{:U('addparent',array('studentid'=>$studentid,'schoolid'=>$schoolid))}">添加家长</a></li>
    </ul>
    <div class="common-form">
        <form method="post" class="form-horizontal J_ajaxForm" action="{:U('addparent_post')}">
            <input type="hidden" name="schoolid" value="{$schoolid}">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">家长姓名:</label>
                    <div class="controls">
                        <input type="input" class="input" name="user_name">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">联系方式:</label>
                    <div class="controls">
                        <input type="input" class="input" name="phone">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">与学生的关系:</label>
                    <div class="controls">
                        <select id="appe" class="input" name="appe" class="normal_select">
                            <OPTION value="0">请选择</OPTION>
                            <foreach name="relation" item="vo">
                                <OPTION value="{$vo.id}">{$vo.appellation_name}</OPTION>
                            </foreach>
                        </select>
                    </div>
                </div>
            </fieldset>
            <div class="form-actions">
                <input type="hidden" name="studentid" value="{$studentid}" />
                <button type="submit" class="btn btn-primary btn_submit J_ajax_submit_btn">添加</button>
                <a class="btn" href="{:U("parentlist",array("id"=>$studentid))}">返回</a>
            </div>
        </form>
    </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>