<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap jj">
    <ul class="nav nav-tabs">
        <li class="active"><a href="">发布家校圈</a></li>
    </ul>
    <div class="common-form">
        <form method="post" class="form-horizontal J_ajaxForm" action="{:U('releaseblog_post')}">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">指定学校:</label>
                    <div class="controls">
                        <select class="input" name="schoolid">
                            <option value="1">学校1</option>
                            <option value="2">学校2</option>
                            <option value="3">学校3</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">指定班级:</label>
                    <div class="controls">
                        <select class="input" name="classid">
                            <option value="1">班级1</option>
                            <option value="2">班级2</option>
                            <option value="3">班级3</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">家校圈内容:</label>
                    <div class="controls">
                        <input type="text" class="input" name="content" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">家校圈图片1:</label>
                    <div class="controls">
                        <input type="file" class="input" name="pic1" value="" accept="image/jpeg,image/png,image/jpg">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">家校圈图片2:</label>
                    <div class="controls">
                        <input type="file" class="input" name="pic2" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">家校圈图片3:</label>
                    <div class="controls">
                        <input type="file" class="input" name="pic3" value="">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">家校圈图片4:</label>
                    <div class="controls">
                        <input type="file" class="input" name="pic4" value="">
                    </div>
                </div>
            </fieldset>
            <div class="form-actions">
                <!--<input type="hidden" name="id" value="{$id}" />-->
                <!--<button type="submit">更新</button>-->
                <button type="submit" class="btn btn-primary btn_submit J_ajax_submit_btn">提交</button>
                <button class="btn" type="reset">清空</button>
                <!--<a class="btn" href="__URL__/schoollist">清除</a>-->
            </div>
        </form>
    </div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>