<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap J_check_wrap">
    <ul class="nav nav-tabs">
        <li class="active"><a href="{:U('messageManage')}">信息列表</a></li>
        <li ><a href="{:U('newaddmessage')}">新增信息</a></li>



    </ul>
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th width="50">消息id:</th>
            <th >发送人姓名:</th>
            <th>接收人姓名：</th>
            <th>信息内容:</th>
            <th>发送时间:</th>



            <th>信息类型:</th>

            <th width="120">管理操作</th>
        </tr>
        </thead>
        <tbody>
        <php>$message_type=array("1"=>"普通信息","2"=>"请假","3"=>"叮嘱");</php>
        <foreach name="user_message" item="vo">
            <tr>
                <td>{$vo.message_id}</td>
                <td>{$vo.send_user_name}</td>
                <td>{$vo.receive_user_name}</td>
                <td>{$vo.message_content}</td>
                <td>{$vo.message_time|date='Y-m-d',###}</td>
                <td>{$message_type[$vo['message_type']]}</td>



                <td>
                    <a href='{:U("changemessage",array("message_id"=>$vo["message_id"]))}'>修改信息</a> |
                    <!--<a class="J_ajax_del" href="{:U('user/delete',array('id'=>$vo['id']))}">删除</a> |-->
                    <a href="{:U('delete_message',array('message_id'=>$vo['message_id']))}" class="J_ajax_dialog_btn" data-msg="您确定要删除此信息吗？">删除</a> |
                </td>
            </tr>
        </foreach>
        </tbody>
    </table>
    <div class="pagination">{$page}</div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>