<admintpl file="header" />
<body class="J_scroll_fixed">
<div class="wrap J_check_wrap">
    <ul class="nav nav-tabs">
        <li class="active"><a href="{:U('index')}">学校列表</a></li>
        <li><a href="{:U('add')}">添加学校</a></li>
    </ul>
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th width="50">学校ID</th>
            <th>班级名称</th>
            <th>班主任</th>
            <th>联系电话</th>
            <th>创建时间</th>
            <th>学校</th>
            <th>状态</th>
            <th width="120">管理操作</th>
        </tr>
        </thead>
        <tbody>
        <foreach name="class" item="vo">
            <tr>
                <td>{$vo.id}</td>
                <td>{$vo.classname}</td>
                <td>{$vo.headteachername}</td>
                <td>{$vo.teacherphone}</td>
                <td>{$vo.school_name}</td>
                <td><php>echo date('Y-m-d h:i:s',$vo['create_time']);</php></td>
                <td>{$school_statuses[$vo['school_status']]}</td>
                <td>
                    <a href='{:U("edit",array("id"=>$vo["schoolid"]))}'>修改</a> |
                    <if condition="$vo['school_status'] eq 0">
                        <a href="{:U('run',array('id'=>$vo['schoolid']))}" class="J_ajax_dialog_btn" data-msg="您确定要启用此学校吗？">启用</a>
                        <elseif  condition="$vo['school_status'] eq 1"/>
                        <a href="{:U('pay',array('id'=>$vo['schoolid']))}">充值</a>
                        <else />
                        <a href="{:U('stop',array('id'=>$vo['schoolid']))}" class="J_ajax_dialog_btn" data-msg="您确定要停用此学校吗？">停用</a>
                    </if>

                </td>
            </tr>
        </foreach>
        </tbody>
    </table>
    <div class="pagination">{$page}</div>
</div>
<script src="__ROOT__/statics/js/common.js"></script>
</body>
</html>